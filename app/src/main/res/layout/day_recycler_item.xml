<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    style="@style/PRecyclerItemRoot"
    android:padding="10dp">

    <TextView
        android:id="@+id/dayTextView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        style="@style/PDayItemDayText"
        tools:text="Wednesday"/>

    <ImageView
        android:id="@+id/iconImageView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        style="@style/PDayItemIcon"
        tools:src="@drawable/clear_day"/>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_marginLeft="10dp">

        <TextView
            android:id="@+id/temperatureMaxTextView"
            style="@style/PDayItemTemperatureView"
            tools:text="100"/>

        <TextView
            android:id="@+id/temperatureMinTextView"
            style="@style/PDayItemTemperatureView"
            tools:text="100"/>
    </LinearLayout>
</LinearLayout>