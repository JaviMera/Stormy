<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@drawable/recycler_item_background">

    <LinearLayout
        android:id="@+id/temperatureLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center">

        <TextView
            android:id="@+id/timeTextView"
            style="@style/TimeTextView"
            tools:text="AT 8:00 PM it will be"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center">

            <TextView
                android:id="@+id/temperatureMaxTextView"
                style="@style/TemperatureTextView"
                android:textSize="70sp"
                tools:text="63.0"/>

            <ImageView
                android:layout_gravity="top"
                android:layout_marginTop="20dp"
                style="@style/TemperatureIconImageView"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="F"
                android:textColor="@color/white_color"
                android:textSize="@dimen/degree_text_size"
                android:layout_marginLeft="5dp"
                android:paddingTop="5dp"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/summaryLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="5dp">

            <ImageView
                android:id="@+id/locationIconImageView"
                android:padding="5dp"
                style="@style/LocationIconImageView"
                tools:src="@drawable/clear_day"/>

            <TextView
                android:id="@+id/summaryTextView"
                style="@style/SummaryTextView"
                tools:text="This is a summary"/>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                style="@style/HumidityTitleTextView"/>

            <TextView
                android:id="@+id/humidityTextView"
                android:padding="5dp"
                style="@style/HumidityValueTextView"
                tools:text="0.54"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                style="@style/PrecipitationTitleTextView"/>

            <TextView
                android:id="@+id/precipitationTextView"
                android:padding="5dp"
                style="@style/PrecipitationValueTextView"
                tools:text="0 %"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
