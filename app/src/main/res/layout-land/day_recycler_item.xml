<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:background="@drawable/recycler_item_background"
    style="@style/RecyclerItemRootView">

    <TextView
        android:id="@+id/dayTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/LDayItemDayText"
        tools:text="Wednesday"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:orientation="vertical">

        <TextView
            android:id="@+id/temperatureMaxTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/LDayItemTemperature"
            tools:text="100"/>

        <ImageView
            android:id="@+id/iconImageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/LDayItemIcon"
            tools:src="@drawable/partly_cloudy"/>

        <TextView
            android:id="@+id/temperatureMinTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/LDayItemTemperature"
            tools:text="100"/>

    </LinearLayout>
</LinearLayout>