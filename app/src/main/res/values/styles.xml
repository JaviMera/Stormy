<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
    </style>

    <style name="LocationIconImageView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:scaleType">fitEnd</item>
    </style>

    <style name="LocationTextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">@dimen/location_text_pad</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="android:textColor">@color/white_color</item>
        <item name="android:textSize">@dimen/location_text_size</item>
    </style>

    <style name="TimeTextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/weather_data_info_title_color</item>
        <item name="android:textSize">@dimen/time_text_size</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">@dimen/time_text_pad</item>
    </style>

    <style name="TemperatureTextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/white_color</item>
        <item name="android:textSize">@dimen/temperature_text_size</item>
    </style>

    <style name="TemperatureIconImageView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:src">@drawable/degree</item>
        <item name="android:scaleType">fitStart</item>
        <item name="android:adjustViewBounds">true</item>
        <item name="android:maxHeight">@dimen/temperature_icon_height</item>
        <item name="android:layout_gravity">top</item>
        <item name="android:layout_marginTop">@dimen/temp_degree_icon_margin</item>
    </style>

    <style name="TemperatureDegreeText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/white_color</item>
        <item name="android:textSize">@dimen/degree_text_size</item>
        <item name="android:layout_marginTop">@dimen/temp_degree_margin</item>
        <item name="android:layout_gravity">top</item>
    </style>

    <style name="PPWeatherDataInfoTitle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/weather_data_info_title_color</item>
        <item name="android:textSize">@dimen/l_hour_title_text_size</item>
    </style>

    <style name="PLWeatherDataInfoTitle">
        <item name="android:layout_width">@dimen/zero</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">2</item>
        <item name="android:gravity">right</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@color/weather_data_info_title_color</item>
        <item name="android:textSize">@dimen/weather_data_info_title_text_size</item>
    </style>

    <style name="LWeatherDataInfoValue">
        <item name="android:layout_width">@dimen/zero</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:gravity">left|center</item>
        <item name="android:textColor">@color/white_color</item>
        <item name="android:layout_marginLeft">@dimen/l_weather_data_value_margin</item>
    </style>

    <style name="PWeatherDataInfoTitle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/weather_data_info_title_color</item>
        <item name="android:textSize">@dimen/l_hour_title_text_size</item>
    </style>

    <style name="PLWeatherDataInfoValue">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/white_color</item>
        <item name="android:textSize">@dimen/humidity_value_text_size</item>
    </style>

    <style name="PPWeatherDataInfoValue">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/white_color</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/humidity_value_text_size</item>
    </style>

    <style name="TLWeatherDataIntoTitle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textSize">@dimen/l_hour_title_text_size</item>
        <item name="android:textColor">@color/weather_data_info_title_color</item>
    </style>

    <style name="TLHumidityTextView" parent="TLWeatherDataIntoTitle">
        <item name="android:text">@string/humidity_text</item>
    </style>

    <style name="TLPrecipitationTextView" parent="TLWeatherDataIntoTitle">
        <item name="android:text">@string/precipitation_text</item>
    </style>

    <style name="TLWeatherDataInfoValue">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/white_color</item>
        <item name="android:textSize">@dimen/weather_data_info_value_size</item>
        <item name="android:padding">@dimen/tl_weather_data_info_value_pad</item>
    </style>

    <style name="PLHumidtyTitleText" parent="PWeatherDataInfoTitle">
        <item name="android:text">@string/humidity_text</item>
    </style>

    <style name="PHumidityValueText" parent="LWeatherDataInfoValue">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="PLPrecipitationTitleText" parent="PWeatherDataInfoTitle">
        <item name="android:text">@string/precipitation_text</item>
    </style>

    <style name="PLHumidityTitleText" parent="PLWeatherDataInfoTitle">
        <item name="android:text">@string/humidity_text</item>
    </style>

    <style name="TPHumidityTitleText" parent="PWeatherDataInfoTitle">
        <item name="android:text">@string/humidity_text</item>
    </style>

    <style name="TPPrecipitationTitleText" parent="PWeatherDataInfoTitle">
        <item name="android:text">@string/precipitation_text</item>
    </style>

    <style name="PPHumidityTitleText" parent="PPWeatherDataInfoTitle">
        <item name="android:text">@string/humidity_text</item>
    </style>

    <style name="PPPRecipitationTitleText" parent="PPWeatherDataInfoTitle">
        <item name="android:text">@string/precipitation_text</item>
    </style>

    <style name="WindSpeedTitleText" parent="PLWeatherDataInfoTitle">
        <item name="android:text">@string/wind_speed_text</item>
    </style>

    <style name="WindBearTitleText" parent="PLWeatherDataInfoTitle">
        <item name="android:text">@string/wind_bear_text</item>
    </style>

    <style name="SummaryTextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/white_color</item>
        <item name="android:textSize">@dimen/summary_text_size</item>
        <item name="android:gravity">center</item>
    </style>

    <!-- Recycler Item General -->

    <style name="PRecyclerItemRoot">
        <item name="android:background">@drawable/recycler_item_background</item>
        <item name="android:layout_marginTop">@dimen/recycler_item_margin</item>
        <item name="android:layout_marginBottom">@dimen/recycler_item_margin</item>
    </style>

    <style name="LRecyclerItemRoot">
        <item name="android:background">@drawable/recycler_item_background</item>
        <item name="android:layout_marginRight">@dimen/recycler_item_margin</item>
        <item name="android:layout_marginLeft">@dimen/recycler_item_margin</item>
    </style>

    <!-- Day recycler Item Views Portrait-->

    <style name="PDayItemDayText">
        <item name="android:layout_gravity">center</item>
        <item name="android:gravity">left</item>
        <item name="android:textColor">@color/white_color</item>
        <item name="android:textSize">@dimen/p_day_text_size</item>
    </style>

    <style name="PDayItemIcon">
        <item name="android:layout_gravity">center</item>
        <item name="android:scaleType">fitEnd</item>
    </style>

    <style name="PDayItemTemperatureView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/p_day_temp_text_size</item>
        <item name="android:textColor">@color/white_color</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">@dimen/p_day_temp_pad</item>
    </style>

    <!-- Day recycler Item Views Landscape-->

    <style name="LDayItemDayText">
        <item name="android:textColor">@color/white_color</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/p_day_text_size</item>
    </style>

    <style name="LDayItemTemperature">
        <item name="android:textSize">@dimen/l_day_temp_text_size</item>
        <item name="android:textColor">@color/white_color</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="LDayItemIcon">
        <item name="android:layout_gravity">center</item>
        <item name="android:scaleType">fitCenter</item>
    </style>

    <!-- Hour recycler item views portrait -->

    <style name="PHourItemTime">
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/white_color</item>
        <item name="android:textSize">@dimen/p_hour_item_text_size</item>
    </style>

    <style name="PHourItemIcon">
        <item name="android:scaleType">fitCenter</item>
    </style>

    <style name="PHourSummaryText">
        <item name="android:gravity">left|center</item>
        <item name="android:textColor">@color/white_color</item>
    </style>

    <style name="PHourTemperature">
        <item name="android:textColor">@color/white_color</item>
        <item name="android:textSize">@dimen/p_hour_temp_text_size</item>
    </style>

    <!-- Hour recycler item views landscape -->

    <style name="LWeatherDataTitleText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">@dimen/l_weather_data_title_pad</item>
        <item name="android:textSize">@dimen/l_hour_title_text_size</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/white_color</item>
    </style>

    <style name="LWeatherDataSummary">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/l_time_text_size</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/white_color</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="LWeatherDataTemperatureText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/l_temp_text_size</item>
        <item name="android:textColor">@color/white_color</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="LWeatherDataIcon">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">@dimen/l_weather_data_icon_pad</item>
        <item name="android:scaleType">fitCenter</item>
        <item name="android:layout_gravity">center</item>
    </style>
</resources>
